---
import CartNavigationLink from "./ecommerce/cart_navigation_link.svelte";

type NavigationLink = {
    href: string;
    label: string;
};

interface Props {
    navigation_links: NavigationLink[];
}

const { navigation_links } = Astro.props;
---

<nav class="flex flex-col items-center">
    <div
        class="grow flex flex-col sm:flex-row justify-between items-center w-full text-center px-4 md:px-0"
    >
        <h1 class="sm:text-lg md:text-xl p-4 text-center">
            <a href="/">Home</a>
        </h1>
        <div class="flex flex-col sm:flex-row items-center">
            {
                navigation_links.map((navigation_link) => (
                    <a class="flex-1" href={navigation_link.href}>
                        <h2 class="sm:text-lg md:text-xl p-2">
                            {navigation_link.label}
                        </h2>
                    </a>
                ))
            }
            <CartNavigationLink client:load />
        </div>
    </div>
</nav>
