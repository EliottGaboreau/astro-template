---
const { node } = Astro.props;

type Heading = "h1" | "h2" | "h3" | "h4" | "h5" | "h6";

type HeadingToClassName = {
    [Key in Heading]: string;
};

const Tag: Heading = node.tag;

const class_name_mapping: HeadingToClassName = {
    h1: "text-5xl bold",
    h2: "text-2xl bold",
    h3: "text-lg bold",
    h4: "text-lg italic",
    h5: "text-md italic",
    h6: "text-sm italic",
};
---

<Tag class={class_name_mapping[Tag]}>
    <slot />
</Tag>
