---
import Layout from "../layouts/layout.astro";

const params = new URLSearchParams({
	limit: "100",
});

const response = await fetch(
	`${import.meta.env.PAYLOAD_API_URL}/pages?${params}`,
	{
		headers: {
			Authorization: `users API-Key ${import.meta.env.PAYLOAD_API_TOKEN}`,
		},
	},
).then((r) => r.json());
---

<Layout>
	<h1 class="text-2xl text-center md:text-4xl m-2">Index</h1>
	{response.docs.map((page) => <a href={`/${page.slug}`}>{page.title}</a>)}
</Layout>
